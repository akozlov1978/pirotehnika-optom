.cart_product
    
    .ps-product
                
        &__image
            height 100px
            
            &-zoom
                position relative
                display block
                
                &::after
                    content "\f00e"
                    display block
                    absolute top 0 left 0 width 100% height 100px
                    font 32px/100px "FontAwesome"
                    text-align center
                    background-color rgba(#000, .2)
                    color #fff
                    transition .5s opacity ease
                    opacity 0
                    
                &:hover::after
                    opacity 1