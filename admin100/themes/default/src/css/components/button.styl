$button
    display inline-block
    font 400 12px/30px "Open Sans",Helvetica,Arial,sans-serif
    padding 0 20px
    color #fff
    border solid 1px #279cbb
    border-radius 3px
    background-color #2eacce
    box-shadow "#1B7088" 0 -1px 0 inset
    transition .5s all ease
    
    &:hover
        background-color lighten(#2eacce, 20%)
