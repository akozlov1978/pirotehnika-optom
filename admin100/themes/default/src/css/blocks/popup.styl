@import '../components/*.styl'

.ps-popup
    absolute top 50% left 50%
    
    &__overlay
        fixed top 0 left 0 width 100% height 100%
        background-color rgba(#000, .3)
        z-index 9999
        display none
        
    &__close
        absolute top -5px right -5px width 25px height 25px
        background #333 url($cross-icon) 50% 50% no-repeat
        border solid 1px #fff
        border-radius 50%
        box-shadow 0 0 10px 0 #333
        transition .5s all ease
        
        &:hover
            background-color #555

        
    
    &__form
        display block
        margin -50% 0 0 -50%
        background-color #fff
        border-radius 5px
        
    &__header
        position relative
        padding 10px 20px
        
    &__title
        font 20px/1 "Open Sans",Helvetica,Arial,sans-serif
        text-align left
        
    &__content
        padding 0 20px
        
    &__footer
        padding 10px 20px
        
    &__submit
        @extends $button
        text-transform uppercase
        